<?xml version="1.0"?>
<page
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <update handle="cms_page_view" />
    <body>
        <referenceContainer name="content" htmlClass="home">
            <!-- Slider block -->
            <block class="Magento\Cms\Block\Block" name="home-slider" before="home-brief-info">
                <arguments>
                    <argument name="block_id" xsi:type="string">home-slider</argument>
                </arguments>
            </block>
        </referenceContainer>

    </body>
</page>
